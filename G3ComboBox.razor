@typeparam TItem
@inherits SelectComponent<TItem>

<select name="@Name" class="@SelectClass" @onchange="OnChange">
    @if (HasDefaultOption)
    {
        <option selected value="-1">@OptionText</option>
    }

    @foreach (var dictionaryItem in dictionaryItems)
    {
        if (ItemTemplate is null)
        {
            <ComboBoxDefaultItemTemplate TItem="TItem" KeyValuePair="@dictionaryItem" />
        }
        else
        {
            <option class="@OptionClass" value="@dictionaryItem.Key">@ItemTemplate(dictionaryItem.Value)</option>
        }
    }
</select>